<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:padding">17dp</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:drawableRight">@drawable/ic_card</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textInputHint</item>
        <item name="android:background">@drawable/roundededittext</item>
    </style>
    <style name="TextInputPasswordLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:padding">17dp</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:drawableRight">@drawable/ic_padlock</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textInputHint</item>
        <item name="android:background">@drawable/roundededittext</item>
    </style>

    <style name="TextHeading1" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">44sp</item>
    </style>
    <style name="TextBody" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>